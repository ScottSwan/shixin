<script type="text/javascript">
		$(function() {;
		    var scrHei = $(window).height();
		    var minHei = scrHei - 220;
		    if (minHei>730) {
		    	$('.nolog_index_conapp').css({
			    	'min-height':minHei
			    })
		    }else{
		    	$('.nolog_index_conapp').css({
			    	'min-height':730
			    })
		    };
		    
